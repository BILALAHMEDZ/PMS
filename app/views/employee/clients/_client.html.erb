<% title '-All Clients' %>
<div class='container'>
  <div>
    <%= form_tag employee_clients_path, method: 'get' do %>
      <%= text_field_tag :search, params[:search], class: 'form-control col-11 float-left', placeholder: 'Search By Name OR Email'%>
      <%= submit_tag 'Search', class: 'btn btn-primary float-right'%>
    <%end%>
  </div>
  <table class='table table-striped' id='myTable'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td><%= link_to '', employee_client_path(client) , class: 'btn btn-primary fa fa-eye' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @clients %>
</div>
