<div class='modal-dialog'>
  <div class='modal-content'>
    <div class='modal-header'>
      <h5 class='modal-title'>New Timelog</h5>
      <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
        <span aria-hidden='true'>&times;</span>
      </button>
    </div>
    <div class='modal-body'>
      <div class='container'>
        <%= form_with(model: @timelog, url: admin_project_timelogs_path(@project.id), remote: true) do |f| %>
          <div id='timelog-errors'>
          </div>
          <div class='field'>
            <%= f.label :hours %>
            <%= f.text_field :hours, required: true, class: 'form-control'%>
          </div>
          <div class='clearfix mb-3'></div>
          <div class='field'>
           <%= f.select :employee_id, ('<option value=''>Select Employee</option>' + options_from_collection_for_select(Employee.all, :id, :name, :selected => f.object.employee_id)).html_safe, {}, { id: 'choose-employee', :class => 'chosen-select'} %>
          </div>
          <div class='clearfix mb-3'></div>
          <div class='actions'>
            <%= f.submit 'Create' ,class: 'btn btn-primary'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
