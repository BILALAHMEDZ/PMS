<% title "-Edit Client" %>
<div class="container">
  <%= form_with(model: @project, url: {action: 'update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', client: @project %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title ,class: "form-control"%>
    </div>
    <div class="clearfix mb-3"></div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :hours_spent %>
      <%= f.text_field :hours_apent, class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :amount %>
      <%= f.text_field :amount, class: "form-control"%>
    </div>
    <div class="clearfix mb-3"></div>
    <div class="actions">
      <%= f.submit "Update" ,class: "btn btn-primary"%>
      <%= link_to "Back", manager_clients_path, class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
