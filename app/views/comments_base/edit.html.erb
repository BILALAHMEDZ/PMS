<% title "-Edit Comment" %>
<div class="container">
  <%= form_with(model: @comment, url: {action: 'update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', comment: @comment %>
    <div class="field">
      <%= f.label :message %>
      <%= f.text_field :message, class: "form-control"%>
    </div>
    <div class="clearfix mb-3"></div>
    <div class="actions">
      <%= f.submit "Update" ,class: "btn btn-primary"%>
      <%= link_to "Back", :back, class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
