<% title "-Edit User" %>
<div class="container">
  <%= form_with(model: @user, :url => {:action => 'update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', user: @user %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name ,class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
    </div>
    <div class="form-group">
    <div class="form-group">
      <%= f.label :type %>
      <%= f.select :type , ['User', 'Admin' ,'Manager'] , {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status , ['Enabled', 'Disabled'] , {}, class: "form-control" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Update" ,class: "btn btn-primary"%>
      <%= link_to "Back", admin_users_path, class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
