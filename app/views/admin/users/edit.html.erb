<% title '-Edit User' %>
<div class='container'>
  <%= form_with(model: @user, url: {action: 'update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', user: @user %>
    <div class='field'>
      <%= f.label :name %>
      <%= f.text_field :name, required: true,class: 'form-control'%>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='field'>
      <%= f.label :email %>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: 'email' ,class: 'form-control'%>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='form-group'  id='type'>
      <%= f.label :role %>
      <%= f.select :type , User::TYPES , {}, {id: 'role', class: 'form-control'} %>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='form-group'>
      <%= f.label :status %>
      <%= f.select :status , ['Enabled', 'Disabled'] , {}, {id: 'status', class: 'form-control'}%>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='actions'>
      <%= f.submit 'Update' ,class: 'btn btn-primary'%>
      <%= link_to 'Back', admin_users_path, class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
