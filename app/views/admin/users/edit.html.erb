<% title "-Edit User" %>
<div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div>
<div class="container">
  <%= form_with(model: @user, url: {action: 'update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', user: @user %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name ,class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="form-group"  id="type">
      <%= f.label :role %>
      <%= f.select :type , ['User', 'Admin' ,'Manager'] , {}, {id: 'role', class: "form-control"} %>
    </div>
    <div class="row"></div>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status , ['Enabled', 'Disabled'] , {}, {id: 'status', class: "form-control"}%>
    </div>
    <div class="row"></div>
    <div class="actions">
      <%= f.submit "Update" ,class: "btn btn-primary"%>
      <%= link_to "Back", admin_users_path, class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
