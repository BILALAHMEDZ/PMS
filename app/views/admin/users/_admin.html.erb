<% title "-All Users" %>
<div class="container">
  <div>
    <%= form_tag admin_users_path, method: 'get' do %>
      <%= text_field_tag :search, params[:search], class: 'form-control col-3 float-left', placeholder: 'Search By Name OR Email', value: ""%>
      <%= submit_tag 'Search', class: 'btn btn-primary float-left ml-1'%>
    <%end%>
    <%= form_tag admin_users_path, method: 'get' do %>
      <%= select_tag(:search, '<option value="" hidden>Search By Role</option><option value="Admin">Admin</option><option value="Manager">Manager</option><option value="User">User</option>'.html_safe, class: 'form-control col-3 float-left ml-1') %>
    <%= submit_tag 'Search', class: 'btn btn-primary float-left ml-1'%>
    <%end%>
    <%= form_tag admin_users_path, method: 'get' do %>
      <%= select_tag(:search, '<option value="" hidden>Search By Status</option><option value="Enabled">Enabled</option><option value="Disabled">Disabled</option>'.html_safe, class: 'form-control col-3 float-left ml-1') %>
     <%= submit_tag 'Search', class: 'btn btn-primary float-left ml-1'%>
    <%end%>
  </div>
    <div class="clearfix mb-3"></div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Type</th>
        <th>Email</th>
        <th>Option</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.status %></td>
          <td><%= user.type %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to '', edit_admin_user_path(user) , class: 'btn btn-primary fa fa-pencil' %>
            <%= link_to '', admin_user_path(user) , method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger fa fa-trash-o' , id: 'delete' %></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to fa_icon('plus-square', text: 'Add User'), new_admin_user_path, class: 'btn btn-primary' %>
  <%= paginate @users %>
</div>
