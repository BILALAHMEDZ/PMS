<% title '-Add User' %>
<div class='container'>
  <%= form_with(model: @user, url: {action: 'create'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', user: @user %>
    <div class='field'>
      <%= f.label :name %>
      <%= f.text_field :name, required: true, class: 'form-control'%>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='field'>
      <%= f.label :email %>
      <%= f.email_field :email, required: true, class: 'form-control'%>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='field'>
      <%= f.label :password %>
      <%= f.password_field :password, required: true, class: 'form-control'%>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='actions'>
      <%= f.submit 'Create' ,class: 'btn btn-primary'%>
      <%= link_to 'Back', admin_users_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

