<% title "-Add User" %>
<div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div>
<div class="container">
  <%= form_with(model: @user, url: {action: 'create'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', user: @user %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name ,class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="field">
     <%= f.label :type %>
     <%= f.select :type , ['User', 'Admin' ,'Manager'] , {}, class: "form-control" %>
    </div>
    <div class="row"></div>
     <div class="field">
     <%= f.label :status %>
     <%= f.select :status , ['Enabled', 'Disabled'] , {}, class: "form-control" %>
    </div>
    <div class="row"></div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password ,class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="actions">
      <%= f.submit "Create" ,class: "btn btn-primary"%>
      <%= link_to "Back", admin_users_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

