<% title '-User' %>
<div class='container'>
  <div class='actions'>
    <%= link_to 'Back', :back, class: 'btn btn-success' %>
  </div>
  <div class='clearfix mb-3'></div>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Type</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.status %></td>
          <td><%= @user.type %></td>
          <td><%= @user.email %></td>
        </tr>
    </tbody>
  </table>
</div>
