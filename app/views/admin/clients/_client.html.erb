<% title "-All Clients" %>
<div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div>
<div class="container">
  <div>
    <%= form_tag admin_clients_path, method: 'get' do %>
      <%= text_field_tag :search, params[:search], class: 'form-control col-11 float-left', placeholder: 'Search By Name'%>
      <%= submit_tag "Search", class: 'btn btn-primary float-right'%>
    <%end%>
  </div>
  <table class="table table-striped" id="myTable">
    <thead>
      <tr>
        <th><strong>Name</strong></th>
        <th><strong>Phone</strong></th>
        <th><strong>Email</strong></th>
        <th><strong>Actions</strong></th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <div class="btn_group">
          <td>
          <%= link_to '', edit_admin_client_path(client) , class: 'btn btn-primary fa fa-pencil' %>
          <%= link_to '', admin_destroy_client_path(client) , method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger fa fa-trash-o' , id: 'delete' %></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add Client', new_admin_client_path , class: 'btn btn-primary fa fa-plus-square' %>
  <%= paginate @clients %>
</div>
