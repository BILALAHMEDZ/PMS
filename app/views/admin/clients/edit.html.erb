<% title "-Edit Client" %>\
<div class="container">
  <%= form_with(model: @client, url: {action: 'update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', client: @client %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name ,class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control"%>
    </div>
    <div class="clearfix mb-3"></div>
    <div class="field">
      <%= f.submit "Update" ,class: "btn btn-primary"%>
      <%= link_to "Back", admin_clients_path, class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
