<% title "-Edit Profile" %>
<div class="row1"></div>
<div class="container">
  <%= form_with(model: @user, url: {action: 'profile_update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', user: @user %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name ,class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="actions">
      <%= f.submit "Update" ,class: "btn btn-primary"%>
      <%= link_to 'Change Password', edit_user_registration_path , class: 'btn btn-primary  btn-success float-right' %>
      <%= link_to "Back", :back, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
