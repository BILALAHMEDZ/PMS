<% title "-Edit Profile" %>
<div class="container">
  <%= form_with(model: @user, :url => {:action => 'profile_update'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', user: @user %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name ,class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Update" ,class: "btn btn-primary"%>
      <%= link_to 'Change Password', edit_user_registration_path , class: 'btn btn-primary  btn-success float-right' %>
      <%= link_to "Back", userslist_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
