<% title '-Forgot Password' %>
<div class='container'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <div class='input-group margin-bottom-sm col-6 offset-3'>
      <span class='input-group-addon'><i class='fa fa-envelope-o fa-fw' aria-hidden='true'></i></span>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email'%>
    </div>
    <div class='clearfix mb-3'></div>
    <div class='actions'>
      <%= f.submit 'Send me reset password instructions' ,class: 'btn btn-primary col-4 offset-4'%>
    </div>
  <% end %>
</div>
