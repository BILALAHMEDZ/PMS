<% title "-Change Password" %>
<div class="container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label :new_password %> <i>(leave blank if you don't want to change it)</i><div class="clearfix mb-3"></div>
      <%= f.password_field :password, autocomplete: 'new-password' ,class: 'form-control'%>
      <% if @minimum_password_length %>
        <div class="clearfix mb-3"></div>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :new_password_confirmation %><div class="clearfix mb-3"></div>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password' ,class: 'form-control'%>
    </div>
    <div class="clearfix mb-3"></div>
    <div class="actions col-9">
      <%= f.submit 'Change my Password' , class: 'btn btn-primary col-4 offset-6'%>
    </div>
<% end %>
</div>
