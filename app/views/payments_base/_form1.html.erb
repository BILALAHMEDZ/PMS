<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">New Payment</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="container">
        <%= form_with(model: @payment, url: manager_project_payments_path(@project.id), remote: true) do |form| %>
          <% if @payment.errors.any? %>
            <div id="payment-errors">

            </div>
          <% end %>
          <div class="form-group">
            <%= form.label :payment %>
            <%= form.text_field :payment, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.submit "Save Payment", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
