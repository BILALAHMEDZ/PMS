<%= form_with(model: @comment, url: comments_url, class: 'form-vertical' , remote: true) do |f| %>
  <%= render 'errors', comment: @comment %>
  <div class="field">
    <%= f.label :message %>
    <%= f.text_field :message, class: "form-control"%>
  </div>
  <%= hidden_field_tag :commentable_id, commentable_id %>
  <%= hidden_field_tag :commentable_type, commentable_type %>
  <div class="clearfix mb-3"></div>
  <div class="actions">
    <%= f.submit "Create" ,class: "btn btn-primary"%>
  </div>
<% end %>
