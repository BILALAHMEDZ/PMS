<% title "-Add Client" %>
<div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div><div class="row"></div>
<div class="container">
  <%= form_with(model: @client, url: {action: 'create'}, class: 'form-vertical' , local: true) do |f| %>
    <%= render 'errors', client: @client %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name ,class: "form-control"%>
    </div>
    <div class="row"></div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control"%>
    </div>
    <div class="field">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control"%>
    </div>

    <div class="row"></div>
    <div class="actions">
      <%= f.submit "Create" ,class: "btn btn-primary"%>
      <%= link_to "Back", manager_clients_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

