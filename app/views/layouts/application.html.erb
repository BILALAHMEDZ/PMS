<!DOCTYPE html>
<html>
  <head>
    <title>PMS <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <%if user_signed_in? %>
          <%if current_user.admin?%>
            <%= link_to fa_icon('home', text: 'PMS'), admin_users_path ,class: 'nav-link text-light' %>
          <%elsif current_user.manager?%>
            <%= link_to fa_icon('home', text: 'PMS'), manager_clients_path ,class: 'nav-link text-light' %>
          <%elsif current_user.employee? %>
            <%= link_to fa_icon('home', text: 'PMS'), employee_timelogs_path ,class: 'nav-link text-light' %>
          <%end%>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="
            navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto">
            </ul>
            <ul class="navbar-nav mr-auto">
            </ul>
            <% if current_user.admin? %>
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <%= link_to 'Users', admin_users_path ,class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Clients', admin_clients_path ,class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Projects', admin_projects_path ,class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Payments', admin_payments_path ,class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Timelogs', admin_timelogs_path ,class: 'nav-link text-light' %>
                </li>
              </ul>
            <% elsif current_user.manager? %>
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <%= link_to 'Clients', manager_clients_path ,class: 'nav-link text-light' %>
                </li>
                 <li class="nav-item">
                    <%= link_to 'Projects', manager_projects_path ,class: 'nav-link text-light' %>
                </li>
                 <li class="nav-item">
                    <%= link_to 'Payments', manager_payments_path ,class: 'nav-link text-light' %>
                </li>
              </ul>
            <% elsif current_user.employee? %>
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <%= link_to 'Timelogs', employee_timelogs_path ,class: 'nav-link text-light' %>
                </li>
              </ul>
            <% end %>
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to fa_icon('user-o', text: 'Edit Profile'), edit_profile_path(current_user) ,class: 'nav-link text-light'%>
              </li>
              <li class="nav-item"><%= link_to(fa_icon('sign-out', text: 'Logout'), destroy_user_session_path, method: :delete ,class: 'nav-link text-light' )%>
              </li>
            </ul>
          </div>
        <%else%>
          <ul class="navbar-nav mr-auto"></ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Login', new_user_session_path ,class: 'nav-link text-light fa fa-sign-in' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link text-light fa fa-user-plus' %>
            </li>
          </ul>
        <%end%>
      </nav>
    </div>
    <div class="clearfix mb-3"></div>
    <div class="clearfix mb-3"></div>
    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-info" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
