<!DOCTYPE html>
<html>
  <head>
    <title>PMS <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous">
  </head>
  <body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%def after_sign_in_path_for(_resource)%>
          <%if current_user.type == 'Admin'%>
            <%= link_to fa_icon('home', text: 'PMS'), admin_users_url, class: 'nav-link' %>
          <%else%>
            <%= link_to fa_icon('home', text: 'PMS'), root_url, class: 'nav-link fa' %>
          <%end%>
        <%end%>
        <%= link_to fa_icon('home', text: 'PMS'), class: 'nav-link' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="
          navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
          <%if user_signed_in? %>
            <ul class="navbar-nav mr-auto">
            </ul>
            <ul class="navbar-nav mr-auto">
            </ul>
            <% if current_user.admin? %>
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <%= link_to 'Users', admin_users_path ,class: 'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Clients', admin_clients_path ,class: 'nav-link' %>
                </li>
              </ul>
            <% elsif current_user.manager? %>
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <%= link_to 'Clients', manager_clients_path ,class: 'nav-link' %>
                </li>
              </ul>
            <% else %>
            <% end %>
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to fa_icon('user-o', text: 'Edit Profile'), edit_profile_path(current_user) ,class: 'nav-link' %>
              </li>
              <li class="nav-item"><%= link_to(fa_icon('sign-out', text: 'Logout'), destroy_user_session_path, method: :delete ,class: 'nav-link' )%>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to 'Login', new_user_session_path ,class: 'nav-link fa fa-sign-in' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link fa fa-user-plus' %>
              </li>
            </ul>
          <% end %>
        </div>
      </nav>
    </div>
    <div class="clearfix mb-3"></div>
    <div class="clearfix mb-3"></div>
    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-info" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
